<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ims.controller.LoginController">
   <children>
      <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: linear-gradient(to bottom right, #008080, #20B2AA);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header Section -->
            <VBox alignment="CENTER" spacing="8.0">
               <children>
                  <Label text="INVENTORY ACCESS" style="-fx-font-weight: bold; -fx-font-size: 28; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0.3, 1, 1);" />
                  <Label text="Secure Login Portal" style="-fx-font-size: 14; -fx-text-fill: #E0F7FA; -fx-font-style: italic;" />
               </children>
            </VBox>
            
            <!-- Login Form -->
            <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #E0F2F1; -fx-border-color: #008080; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.3, 2, 2);" maxWidth="400" prefWidth="400">
               <padding>
                  <Insets bottom="35.0" left="35.0" right="35.0" top="35.0" />
               </padding>
               
               <children>
                  <!-- Username Field -->
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Enter username" style="-fx-font-size: 13; -fx-text-fill: #008080; -fx-font-weight: bold;" />
                        <TextField fx:id="usernameField" promptText="Enter username" style="-fx-pref-width: 320; -fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #008080; -fx-font-size: 14; -fx-background-color: white;" />
                     </children>
                  </VBox>
                  
                  <!-- Password Field -->
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Enter password" style="-fx-font-size: 13; -fx-text-fill: #008080; -fx-font-weight: bold;" />
                        <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-pref-width: 320; -fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #008080; -fx-font-size: 14; -fx-background-color: white;" />
                     </children>
                  </VBox>
                  
                  <!-- Role Selection -->
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Select role" style="-fx-font-size: 13; -fx-text-fill: #008080; -fx-font-weight: bold;" />
                        <ComboBox fx:id="roleComboBox" promptText="Select role" style="-fx-pref-width: 320; -fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #008080; -fx-font-size: 14; -fx-background-color: white;" />
                     </children>
                  </VBox>
                  
                  <!-- Error Label -->
                  <Label fx:id="errorLabel" style="-fx-text-fill: #FF6B6B; -fx-font-size: 12; -fx-wrap-text: true; -fx-font-weight: bold;" maxWidth="320" />
                  
                  <!-- Login Button -->
                  <Button onAction="#handleLogin" text="UNLOCK INVENTORY" style="-fx-background-color: linear-gradient(to bottom, #008080, #006666); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-pref-width: 320; -fx-pref-height: 45; -fx-background-radius: 8; -fx-border-radius: 8; -fx-cursor: hand;" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>