<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ims.controller.WarehouseTrackingController"
      spacing="15"
      style="-fx-padding: 20;">


    <!-- WAREHOUSE TABLE -->
    <TableView fx:id="warehouseTable" prefHeight="250">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
            <TableColumn fx:id="colName" text="Warehouse Name" prefWidth="200"/>
            <TableColumn fx:id="colAddress" text="Address" prefWidth="250"/>
        </columns>
    </TableView>


    <!-- ADD WAREHOUSE -->
    <HBox spacing="10">
        <TextField fx:id="txtName" promptText="Warehouse Name"/>
        <TextField fx:id="txtAddress" promptText="Address"/>
        <Button text="Add" onAction="#addWarehouse"/>
    </HBox>


    <!-- DETAILS SECTION -->
    <VBox spacing="10" style="-fx-background-color: #f2f2f2; -fx-padding: 15; -fx-border-color: #ccc;">
        <Label text="Warehouse Details" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <Label fx:id="lblSelectedName" text="Name: -"/>
        <Label fx:id="lblSelectedAddress" text="Address: -"/>
        <Label fx:id="lblBatchCount" text="Total Batches: -"/>
    </VBox>


    <!-- BATCH TABLE -->
    <TableView fx:id="batchTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="colBatchId" text="Batch ID" prefWidth="100"/>
            <TableColumn fx:id="colProductId" text="Product ID" prefWidth="150"/>
            <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="colExpiry" text="Expiry Date" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>
