<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      spacing="20" alignment="CENTER" prefHeight="800.0" prefWidth="1200.0">
    
    <padding>
        <Insets top="50.0" bottom="50.0" left="50.0" right="50.0"/>
    </padding>
    
    <Text text="Admin Dashboard" style="-fx-font-size: 32; -fx-font-weight: bold;"/>
    <Text text="Welcome Administrator! Full system access" style="-fx-font-size: 16; -fx-fill: #666;"/>
    
    <VBox spacing="15" alignment="CENTER">
        <Button text="Manage Products" prefWidth="200" prefHeight="50" style="-fx-font-size: 14;"/>
        <Button text="Manage Users" prefWidth="200" prefHeight="50" style="-fx-font-size: 14;"/>
        <Button text="View Reports" prefWidth="200" prefHeight="50" style="-fx-font-size: 14;"/>
        <Button text="System Settings" prefWidth="200" prefHeight="50" style="-fx-font-size: 14;"/>
        <Button text="Logout" prefWidth="200" prefHeight="50" 
                style="-fx-font-size: 14; -fx-background-color: #ff4444; -fx-text-fill: white;"/>
    </VBox>
</VBox>