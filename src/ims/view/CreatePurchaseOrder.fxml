<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ims.controller.CreatePurchaseOrderController"
            fitToWidth="true"
            hbarPolicy="NEVER">
    <content>

        <VBox spacing="20" style="-fx-background-color: #f0fdfa;">
            
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Header Section -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Button text="â† Back to Orders" onAction="#goBack" 
                        style="-fx-background-color: #666; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;"/>
                <Label text="Create New Purchase Order" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #008080;"/>
            </HBox>

            <!-- Main Form -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-border-color: #20B2AA; -fx-border-width: 2; -fx-border-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0.3, 2, 2);">
                
                <!-- Supplier Selection -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="Supplier:*" style="-fx-font-weight: bold; -fx-text-fill: #008080; -fx-min-width: 120;"/>
                    <ComboBox fx:id="supplierComboBox" prefWidth="400" style="-fx-background-color: white; -fx-border-color: #008080;"/>
                    <Label text="Required" style="-fx-text-fill: #666; -fx-font-style: italic;"/>
                </HBox>

                <!-- Order Line Form -->
                <VBox spacing="15" style="-fx-border-color: #ccfbf1; 
                                        -fx-border-width: 1; 
                                        -fx-background-color: #f0fdfa; 
                                        -fx-border-radius: 8; 
                                        -fx-padding: 18;">

                    <Label text="Add Product to Order" 
                        style="-fx-font-weight: bold; 
                                -fx-text-fill: #008080; 
                                -fx-font-size: 17px; 
                                -fx-padding: 0 0 5 0;"/>

                    <GridPane hgap="20" vgap="14">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="16"/>
                            <ColumnConstraints percentWidth="16"/>
                            <ColumnConstraints percentWidth="12"/>
                            <ColumnConstraints percentWidth="12"/>
                            <ColumnConstraints percentWidth="20"/>
                            <ColumnConstraints percentWidth="20"/>
                        </columnConstraints>

                        <!-- Headers -->
                        <Label text="Product" GridPane.rowIndex="0" GridPane.columnIndex="0"
                            style="-fx-font-weight: bold; -fx-text-fill: #008080;"/>
                        <Label text="Warehouse" GridPane.rowIndex="0" GridPane.columnIndex="1"
                            style="-fx-font-weight: bold; -fx-text-fill: #008080;"/>
                        <Label text="Quantity" GridPane.rowIndex="0" GridPane.columnIndex="2"
                            style="-fx-font-weight: bold; -fx-text-fill: #008080;"/>
                        <Label text="Unit Price" GridPane.rowIndex="0" GridPane.columnIndex="3"
                            style="-fx-font-weight: bold; -fx-text-fill: #008080;"/>
                        <Label text="Manufacture Date" GridPane.rowIndex="0" GridPane.columnIndex="4"
                            style="-fx-font-weight: bold; -fx-text-fill: #008080;"/>
                        <Label text="Expiry Date" GridPane.rowIndex="0" GridPane.columnIndex="5"
                            style="-fx-font-weight: bold; -fx-text-fill: #008080;"/>

                        <!-- Inputs -->
                        <ComboBox fx:id="productComboBox" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                style="-fx-background-color: white; -fx-border-color: #008080;" />
                        <ComboBox fx:id="warehouseComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                style="-fx-background-color: white; -fx-border-color: #008080;" />
                        <TextField fx:id="quantityField" GridPane.rowIndex="1" GridPane.columnIndex="2"
                                style="-fx-background-color: white; -fx-border-color: #008080;" />
                        <TextField fx:id="unitPriceField" GridPane.rowIndex="1" GridPane.columnIndex="3"
                                editable="false"
                                style="-fx-background-color: white; -fx-border-color: #008080;" />
                        <DatePicker fx:id="manufactureDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="4"
                                    style="-fx-background-color: white; -fx-border-color: #008080;" />
                        <DatePicker fx:id="expiryDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="5"
                                    style="-fx-background-color: white; -fx-border-color: #008080;" />

                        <!-- Add Button -->
                        <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="6">
                            <Button text="Add to Order"
                                    onAction="#addOrderLine"
                                    style="-fx-background-color: linear-gradient(to bottom, #008080, #006666);
                                        -fx-text-fill: white;
                                        -fx-font-weight: bold;
                                        -fx-padding: 10 20;
                                        -fx-background-radius: 5;"/>
                        </HBox>
                    </GridPane>
                </VBox>

                <!-- Order Lines Table -->
                <VBox spacing="10">
                    <Label text="Order Items" style="-fx-font-weight: bold; -fx-text-fill: #008080; -fx-font-size: 16px;"/>
                    
                    <TableView fx:id="orderLinesTable" prefHeight="150" style="-fx-border-color: #ccfbf1;">
                        <columns>
                            <TableColumn text="Product" prefWidth="200"/>
                            <TableColumn text="Warehouse" prefWidth="150"/>
                            <TableColumn text="Quantity" prefWidth="80"/>
                            <TableColumn text="Unit Price" prefWidth="100"/>
                            <TableColumn text="Line Total" prefWidth="100"/>
                            <TableColumn text="Action" prefWidth="80"/>
                        </columns>
                    </TableView>
                    
                    <!-- Total Amount -->
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label fx:id="totalAmountLabel" text="Total: $0.00" 
                            style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #008080; -fx-padding: 10; -fx-background-color: #ccfbf1; -fx-background-radius: 5;"/>
                    </HBox>
                </VBox>

                <!-- Action Buttons -->
                <HBox spacing="15" alignment="CENTER">
                    <Button text="Create Purchase Order" onAction="#createPurchaseOrder" 
                            style="-fx-background-color: linear-gradient(to bottom, #008080, #006666); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-padding: 10 20; -fx-pref-width: 200;"/>
                    <Button text="Cancel" onAction="#goBack" 
                            style="-fx-background-color: #E0F2F1; -fx-text-fill: #008080; -fx-font-weight: bold; -fx-border-color: #008080; -fx-border-width: 2; -fx-padding: 10 20; -fx-pref-width: 120;"/>
                </HBox>
            </VBox>

            <!-- Status Message -->
            <Label fx:id="statusLabel" style="-fx-text-fill: #008080; -fx-font-weight: bold;" visible="false"/>
        </VBox>
    </content>    
</ScrollPane>