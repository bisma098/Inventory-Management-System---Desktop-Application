<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ims.controller.WarehouseTrackingController"
      spacing="15"
      style="-fx-padding: 20;">



    <TableView fx:id="warehouseTable" prefHeight="400">

        <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="100"/>
            <TableColumn text="Warehouse Name" fx:id="colName" prefWidth="200"/>
            <TableColumn text="Address" fx:id="colAddress" prefWidth="250"/>
        </columns>

    </TableView>

    <HBox spacing="10">
        <TextField fx:id="txtName" promptText="Warehouse Name"/>
        <TextField fx:id="txtAddress" promptText="Address"/>
        <Button text="Add" onAction="#addWarehouse"/>
    </HBox>

</VBox>
