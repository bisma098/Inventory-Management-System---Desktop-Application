<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ims.controller.WarehouseController"
            prefHeight="800" prefWidth="1200"
            style="-fx-background-color: #f5f5f5;">

    <!-- TOP BAR -->
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #008080, #20B2AA); -fx-padding: 20;">
            <Label text="WAREHOUSE MANAGEMENT" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <!-- CENTER TABLE -->
    <center>
        <VBox spacing="10" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
            <Label text="üì¶ Warehouse List" 
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #008080;"/>
            
            <TableView fx:id="warehouseTable" VBox.vgrow="ALWAYS"
                       prefHeight="400"
                       style="-fx-border-color: #008080; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;">
                <columns>
                    <TableColumn fx:id="colId" text="Warehouse ID" prefWidth="150" minWidth="100"/>
                    <TableColumn fx:id="colName" text="Warehouse Name" prefWidth="300" minWidth="200"/>
                    <TableColumn fx:id="colAddress" text="Address" prefWidth="500" minWidth="300"/>
                </columns>
                <placeholder>
                    <Label text="No warehouses available. Click 'Add Warehouse' to create one." 
                           style="-fx-text-fill: #999999; -fx-font-size: 14px;"/>
                </placeholder>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <!-- BOTTOM FORM -->
    <bottom>
        <VBox spacing="12" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #008080; -fx-border-width: 2 0 0 0;">
            
            <!-- Form Title -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="üìù Warehouse Details" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #008080;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Select a row to update or delete" 
                       style="-fx-font-size: 12px; -fx-text-fill: #666666; -fx-font-style: italic;"/>
            </HBox>

            <Separator/>

            <!-- Input Fields -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="6" HBox.hgrow="ALWAYS">
                    <Label text="Warehouse Name:" 
                           style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #008080;"/>
                    <TextField fx:id="txtName" 
                               promptText="Enter warehouse name (e.g., Main Warehouse)"
                               style="-fx-pref-height: 35px; -fx-font-size: 13px; -fx-border-color: #008080; -fx-border-radius: 5; -fx-background-radius: 5;"/>
                </VBox>

                <VBox spacing="6" HBox.hgrow="ALWAYS">
                    <Label text="Address:" 
                           style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #008080;"/>
                    <TextField fx:id="txtAddress" 
                               promptText="Enter complete address"
                               style="-fx-pref-height: 35px; -fx-font-size: 13px; -fx-border-color: #008080; -fx-border-radius: 5; -fx-background-radius: 5;"/>
                </VBox>
            </HBox>

            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 5 0 0 0;">
                <Button text="‚ûï ADD WAREHOUSE" 
                        onAction="#addWarehouse" 
                        style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 180; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;">
                    <tooltip>
                        <Tooltip text="Add a new warehouse to the system"/>
                    </tooltip>
                </Button>

                <Button text="‚úèÔ∏è UPDATE" 
                        onAction="#updateWarehouse" 
                        style="-fx-background-color: #fb8c00; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 140; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;">
                    <tooltip>
                        <Tooltip text="Update the selected warehouse"/>
                    </tooltip>
                </Button>

                <Button text="üóëÔ∏è REMOVE WAREHOUSE" 
                        onAction="#deleteWarehouse" 
                        style="-fx-background-color: #e53935; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 200; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;">
                    <tooltip>
                        <Tooltip text="Remove the selected warehouse from the system"/>
                    </tooltip>
                </Button>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="üîÑ CLEAR" 
                        onAction="#clearFields"
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;">
                    <tooltip>
                        <Tooltip text="Clear all input fields"/>
                    </tooltip>
                </Button>
            </HBox>



        </VBox>
    </bottom>

