<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ims.controller.StockReportController">
    <top>
      <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
            <Label text="Stock Report" style="-fx-font-size: 24px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Download CSV" fx:id="btnDownload"/>
            <Button text="Back" fx:id="btnBack"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="stockTable" prefWidth="800">
            <columns>
                <TableColumn text="Product ID" fx:id="colProductId"/>
                <TableColumn text="Product Name" fx:id="colProductName"/>
                <TableColumn text="Category" fx:id="colCategory"/>
                <TableColumn text="Quantity" fx:id="colQuantity"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
